<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wangyn.autolinetextview.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.wangyn.autolinetextview.HotelAutoLineTextView
        android:id="@+id/autoLineTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:defaultTextColor="@color/black"
        app:defaultTextSize="14sp"
        app:textPadding="5dp"/>
    <com.example.wangyn.autolinetextview.HotelDrawLinePriceTextView
        android:layout_toRightOf="@id/autoLineTextView"
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:textColor="#999999"/>
</RelativeLayout>
